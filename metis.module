 */
function metis_code_widget_process($element, $edit, &$form_state, $form) {

  $defaults = $element['#value'];
  $field = content_fields($element['#field_name'], $element['#type_name']);

  $element['metis'] = array(
    '#title' => $element['#title'] . ' (VG Wort)',
    '#type' => 'fieldset',
    '#collapsible' => TRUE,
    '#collapsed' => FALSE,
    '#parents' => $element['#parents'],
  );

  $element['metis']['code_public'] = array(
    '#title' => t('Public code'),
    '#type' => 'hidden',
    '#default_value' => $defaults['code_public'],
    '#weight' => 0,
  );

  $element['metis']['code_private'] = array(
    '#title' => t('Private code'),
    '#type' => 'hidden',
    '#default_value' => $defaults['code_private'],
    '#weight' => 1,
  );

  $element['metis']['server'] = array(
    '#title' => t('Metis server'),
    '#type' => 'hidden',
    '#default_value' => $defaults['server'],
    '#weight' => 2,
  );

  $element['metis']['show'] = array(
    '#title' => t('Include public code in article (enable count)'),
    '#type' => 'checkbox',
    '#default_value' => $defaults['show'],
    '#weight' => 3,
  );

  if (arg(0) == 'node' && is_numeric(arg(1)) && arg(2) == 'edit') {

    // Count characters of the body.
    $count = strlen(strip_tags($form['#node']->body));

    // Set text color.
    if ($count > 1800) {
      $class = 'ok';
    } else {
      $class = 'error';
    }

    // Set description.
    $element['metis']['show']['#description'] = '<span class="' . $class . '">' . t('Text had approximately %count characters on last save. VG Wort requires at least 1.800.', array('%count' => $count)) . '</span>';

  }

  // Disable select field if there are no unused codes left.
  if (!$defaults['code_public'] && !$defaults['show'] && metis_count_unused() == 0) {

    $element['metis']['show']['#disabled'] = 'disabled';
    $element['metis']['show']['#description'] .= '<p class="error">' . t('There are no unused codes left! Field has been disabled, please add new codes.') . '</p>';

  }
  elseif ($defaults['code_public'] && $defaults['code_private']) {

    $element['metis']['show']['#description'] .= '<p>' . t('Public code: %code_public<br /> Private code: %code_private<br /> Server: %server', array(
      '%code_public' => $defaults['code_public'],
      '%code_private' => $defaults['code_private'],
      '%server' => $defaults['server'],
      )
    ) . '</p>';

  }

  return $element;
}


