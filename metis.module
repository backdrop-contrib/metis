/**
 * Theme function for field formatter show.
 *
 * Shows wether the code is set to be shown.
 */
function theme_metis_formatter_show($element = NULL) {

  if (empty($element['#item'])) {
    return '';
  }

  switch ($element['#item']['show']) {

    case '0':
      return t('no');
      break;

    case '1':
      return t('yes');
      break;

  }

}
